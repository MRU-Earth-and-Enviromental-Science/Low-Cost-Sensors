<launch>
    <!-- Launch parameters -->
    <arg name="port" default="/dev/ttyUSB0" />
    <arg name="baud" default="115200" />

    <!-- Launch the ROS Serial client for ESP32 communication -->
    <node name="serialNode" pkg="rosserial_python" type="serial_node.py" output="screen">
        <param name="port" value="$(arg port)" />
        <param name="baud" value="$(arg baud)" />
    </node>

    <!-- Launch the GPS/Sensor Monitor node -->
    <node name="sensorMonitor" pkg="gps_node_pi" type="sensorMonitor" output="screen">
        <rosparam>
            # GPS node parameters can be added here if needed
        </rosparam>
    </node>

    <!-- Launch the Data Processor node -->
    <node name="dataProcessor" pkg="ros_to_raw" type="dataProcessor" output="screen">
        <rosparam>
            # Data processor parameters can be added here if needed
        </rosparam>
    </node>

</launch>